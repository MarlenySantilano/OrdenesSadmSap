<!DOCTYPE html>
<html>
<head>
    <style>
        .bs-example {
            margin: 20px;
        }

        .modal-content iframe {
            margin: 0 auto;
            display: block;
        }
    </style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ordenes de Reporte</title>
    <!-- Bootstrap CSS CDN -->


    <link type="text/css" rel="stylesheet" href="~/Content/LIBS/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/LIBS/jquery-1.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/LIBS/select2.min.css" />


    <link type="text/css" rel="stylesheet" href="~/Content/CSS/datatables.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/CSS/stylelogin.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/CSS/fontawesome.css" />

    <link type="text/css" rel="stylesheet" href="~/Content/LIBS/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/LIBS/jquery-1.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/LIBS/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/LIBS/jquery-1.css" />

</head>
<body>
    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>@Html.ActionLink("Reportes", "Index", "Home")</h3>
            </div>
            <ul class="list-unstyled components">
                <li class="nav-item">
                    @Html.ActionLink("Alta de Reporte", "Index", "Home")
                </li>
                <li class="nav-item">
                    @{if ((int)Session["Perfil"] == 1)
                        {
                            @Html.ActionLink("Usuarios", "Index", "Usuarios")
                        }
                    }
                </li>
                <li class="nav-item">
                    <a href="@Url.Content("~/Content/media/manual_rep_operativo.pdf")" target="_blank">Manual Reportes</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Content("~/Content/media/manual_rep_operativo_video.mp4" )" target="_blank">Manual Reportes Video</a>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Cerrar Sesion", "Logout", "Acceso")
                </li>
            </ul>
        </nav>
        <!-- Page Content  -->
        <aside id="left-sidebar-nav" style="width: 100%;">
            <div id="content">

                <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="false">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            ...
                        </div>
                    </div>
                </div>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <button type="button" id="sidebarCollapse" class="btn btn-info">
                            <i class="fas fa-align-left"></i>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="nav justify-content-end">
                                <li>

                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <div class="container-fluid body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>Ordenes de Reporte</p>
                    </footer>
                </div>
            </div>
        </aside>
    </div>

    <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script type="text/javascript" src="~/Scripts/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/datatables.min.js"></script>
    <script type="text/javascript" src="~/Content/LIBS/sweetalert.min.js"></script>
    <script type="text/javascript" src="~/Content/LIBS/select2.min.js"></script>
    <!-- Bootstrap JS -->
    <script type="text/javascript">
        var buttonVideo = $("#buton_video");
        let $videoSrc;
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');

                var $videoSrc;
                $('.video-btn').click(function () {
                    $videoSrc = $(this).data("src");
                });
                console.log($videoSrc);



                // when the modal is opened autoplay it
                $('#myModalVideo').on('shown.bs.modal', function (e) {

                    // set the video src to autoplay and not to show related video. Youtube related video is like a box of chocolates... you never know what you're gonna get
                    $("#video").attr('src', $videoSrc + "?autoplay=1&amp;modestbranding=1&amp;showinfo=0");
                })



                // stop playing the youtube video when I close the modal
                $('#myModalVideo').on('hide.bs.modal', function (e) {
                    // a poor man's stop video
                    $("#video").attr('src', $videoSrc);
                })



            });

        });


        buttonVideo.on('click', function () {
            // when the modal is opened autoplay it
            $('#myModal').on('shown.bs.modal', function (e) {

                // set the video src to autoplay and not to show related video. Youtube related video is like a box of chocolates... you never know what you're gonna get
                $("#video").attr('src', buttonVideo + "?autoplay=1&amp;modestbranding=1&amp;showinfo=0");
            })

            console.log("****************");
            console.log("********ENTRO A BUTTON********");

            // stop playing the youtube video when I close the modal
            $('#myModal').on('hide.bs.modal', function (e) {
                // a poor man's stop video
                $("#video").attr('src', buttonVideo);
            })


        });

    </script>
    <script>
        $(document).ready(function () {
            var url = $("#Geeks3").attr('src');
            $("#Geeks2").on('hide.bs.modal', function () {
                $("#Geeks3").attr('src', '');
            });
            $("#Geeks2").on('show.bs.modal', function () {
                $("#Geeks3").attr('src', url);
            });
        });
    </script>

</body>
</html>